
@{
    ViewBag.Title = "View Sold Packets Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table > tbody > tr > td {
        padding: 5px !important;
    }
</style>


<div class="modal fade" id="updateModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="text-center text-bold">Update Sold Packet</h5>
                <button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="@Url.Action("PostUpdateSoldPackets","Admin")" method="post">

                    <input type="hidden" name="Id" id="updId" />
                    <input type="hidden" name="way" value="@ViewBag.Way" />
                    <input type="hidden" id="createdBy" name="CreatedBy" value="@ViewBag.Way" />

                            <div class="form-group">

                                <label class="text-bold">Category<span class="text-danger">*</span></label>
                                <select class="form-control" required id="updCategory" name="Category" placeholder="Select a Category">
                                    <option value="">-- Select a Category --</option>
                                    <option value="1">Buffalo</option>
                                    <option value="2">Cow</option>
                                    <option value="3">Buffalo + Cow</option>
                                </select>

                            </div>

                             <div class="form-group">
                                <label class="text-bold">  Quantity <span class="text-danger">*</span></label>
                                <input type="number" min="0" id="updQuantity" class="form-control" required name="Quantity" placeholder="Enter Total Quantity Here" />
                            </div>


                            <div class="form-group">
                                <label class="text-bold"> Price Per Packet <span class="text-danger">*</span></label>
                                <input type="number" min="0" id="updPrice" class="form-control" required name="PricePerPacket" placeholder="Enter Packet Price Here" />
                            </div>


                             <div class="form-group">
                                <label class="text-bold"> From Date and Time <span class="text-danger">*</span></label>
                                <input type="datetime-local" id="updFromDate" class="form-control" required name="FromDate" placeholder="Select From Date and Time " />
                            </div>


                             <div class="form-group">
                                <label class="text-bold"> To Date and Time <span class="text-danger">*</span></label>
                                <input type="datetime-local" id="updToDate" class="form-control" required name="ToDate" placeholder="Select To Date and Time " />
                            </div>

                            <div class="form-group">
                                <label class="text-bold"> Added Date and Time <span class="text-danger">*</span></label>
                                <input type="datetime-local" id="updDate" class="form-control" required name="SoldDate" placeholder="Select Added Date and Time " />
                            </div>


                           <div class="form-group">
                                <label class="text-bold"> Pickup Location <span class="text-danger">*</span></label>
                                <input type="text" id="updPickup" class="form-control" name="Pickup_Location" placeholder="Enter Pickup Location Here" />
                            </div>

                            <div class="form-group">
                                <label class="text-bold"> DropOff Location <span class="text-danger">*</span></label>
                                <input type="text" id="upddropOff" class="form-control" name="DropOff_Location" placeholder=" Enter DropOff Location Here" />
                            </div>


                            <div class="form-group">
                                <label class="text-bold"> Total Distance in KM <span class="text-danger">*</span></label>
                                <input type="number" min="0" id="updDistance" class="form-control" name="Total_Distance" placeholder="Enter Total Distance Here" />
                            </div>

                        
                            
                    

                    <div class="modal-footer">
                        <button type="submit" value="submit" class="btn btn-primary" id="updSubBtn">Update</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



<div class="row m-10">
    <div class="panel panel-flat text-black">
        <div class="panel-heading" style="background: #E8ECED; padding:1px !important;">
            <h2 class="text-center text-black">
                Search
            </h2>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse" class="rotate-180"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body pt-20 pb-20" style="display: none">
            <div class="row">


                <div class="col-md-6 col-lg-6" style="padding: 20px;padding-top:20px;">
                    <div class="form-group">
                        <label><strong>Customer / Rider Name:</strong></label>
                        <input type="text" class="form-control" placeholder="Search Name Here" id="searchName" style="background-color:white">
                    </div>
                </div>

                
                <div class="col-md-6 col-lg-6" style="padding: 20px;padding-top:20px;">
                    <div class="form-group">
                        <label><strong>Pickup:</strong></label>
                        <input type="text" class="form-control" id="searchPickup" style="background-color:white" placeholder="Search By Pickup Location Here">
                    </div>
                </div> 
                
                <div class="col-md-6 col-lg-6" style="padding: 20px;padding-top:20px;">
                    <div class="form-group">
                        <label><strong>DropOff:</strong></label>
                        <input type="text" class="form-control" id="searchDropoff" style="background-color:white" placeholder="Search By Drop Off Location Here">
                    </div>
                </div> 
                
                
                <div class="col-md-6 col-lg-6" style="padding: 20px;padding-top:20px;">
                    <div class="form-group">
                        <label><strong>Distance:</strong></label>
                        <input type="number" class="form-control" id="searchDistance" style="background-color:white" placeholder="Search By Distance Here">
                    </div>
                </div>
                
                <div class="col-md-6 col-lg-6" style="padding: 20px;padding-top:20px;">
                    <div class="form-group">
                        <label><strong>Price Per Packet:</strong></label>
                        <input type="number" class="form-control" id="pricePer" style="background-color:white" placeholder="Search By Price Per Packet Here">
                    </div>
                </div>

                <div class="col-md-6 col-lg-6" style="padding: 20px;padding-top:20px;">
                    <div class="form-group">
                        <label><strong>Added Date:</strong></label>
                        <input type="datetime-local" class="form-control" id="soldDate" style="background-color:white" placeholder="Search By Sold Date Here">
                    </div>
                </div>

                  <div class="col-md-6 col-lg-6" style="padding: 20px;padding-top:20px;">
                    <div class="form-group">
                        <label><strong>From Date:</strong></label>
                        <input type="datetime-local" class="form-control" id="fromDate" style="background-color:white" placeholder="Search By From Date Here">
                    </div>
                </div>

                 <div class="col-md-6 col-lg-6" style="padding: 20px;padding-top:20px;">
                    <div class="form-group">
                        <label><strong>To Date:</strong></label>
                        <input type="datetime-local" class="form-control" id="toDate" style="background-color:white" placeholder="Search By To Date Here">
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <button onclick="clearSearch()" class="btn btn-danger btn-block">Reset</button><br>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 col-xs-12"></div>
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <div class="form-group text-right">
                        <button onclick="searchTable()" class="btn btn-success btn-block">Search</button><br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="panel p-20 m-10">

    <div class="row">
      
            <center><u><h3> Sold Packets List</h3></u></center>
        
      
    
    </div>

    <div class="row">
        <div class="col-md-8"></div>
        <div class="col-md-2 pull-right btn-block">
            <a href="@Url.Action("AddSoldPackets","Admin")" class="btn btn-primary m-5 pull-right">Add New</a>
        </div>
    </div>


    <input type="hidden" id="way" value="@ViewBag.Way" />


    <div class="table-responsive">
        <table class="table text-md-nowrap table-striped table-bordered text-center no-footer" id="packetsTable">
            <thead class="bg-indigo-800">
                <tr>
                    <th class="text-bold" hidden>...</th>
                    <th class="text-bold text-center" style="min-width:140px;">
                        Category
                    </th>
                    <th class="text-bold text-center" style="min-width:140px;">
                        Quantity
                    </th>
                    <th class="text-bold text-center" style="min-width:140px;">
                        Price Per Packet
                    </th>
                    <th class="text-bold text-center" style="min-width:150px;">
                        Customer Name
                    </th>

                    <th class="text-bold text-center" style="min-width:150px;">
                        Dropoff Location
                    </th> 
                    

                    <th class="text-bold text-center" style="min-width:150px;">
                        Pickup Location
                    </th>
                    
                    
                    <th class="text-bold text-center" style="min-width:150px;">
                        Total Distance (KM)
                    </th> 

                    <th class="text-bold text-center" style="min-width:150px;">
                        Total Price
                    </th> 

                     
                    <th class="text-bold text-center" style="min-width:150px;">
                        From Date
                    </th> 


                     
                    <th class="text-bold text-center" style="min-width:150px;">
                        To Date
                    </th> 
                    
                    <th class="text-bold text-center" style="min-width:150px;">
                        Added Date
                    </th> 

                    <th class="text-bold text-center" style="min-width:130px">
                        Action
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<script>

    var way = $('#way').val();

    loadTable();

    function loadTable(dropOff_Location,pickUp_Location,Total_Distance, pricePer,soldDate, userName,fromDate,toDate)
    {
        $('#packetsTable').DataTable(
        {
            "ajax":
            {
                "url": '@Url.Action("GetSoldPacketsDataTableList", "Ajax")',
                "type": "POST",
                "datatype": "json",
                "data": {
                 
                    dropOff_Location: dropOff_Location, pickUp_Location: pickUp_Location,Total_Distance: Total_Distance, pricePer: pricePer, soldDate: soldDate, userName: userName,fromDate:fromDate,toDate:toDate
                }
            },
            'columns':
            [
                { "data": "hidden", "name": "0" },
                { "data": "category", "name": "Category" },
                { "data": "quantity", "name": "Quantity" },
                { "data": "pricePerPacket", "name": "PricePerPacket" },
                { "data": "fullName", "name": "FullName" },
                { "data": "dropOff_Location", "name": "DropOff_Location" },
                { "data": "pickUp_Location", "name": "Pickup_Location" },
                { "data": "total_Distance", "name": "Total_Distance" },
                { "data": "Price", "name": "0" },
                { "data": "fromDate", "name": "FromDate" },
                { "data": "toDate", "name": "ToDate" },
                { "data": "soldDateString", "name": "SoldDate" },
                { "data": "Action", "name": "0" },
            ],
            'columnDefs':
            [
                {
                    "targets": 0,
                    "visible": false,
                    "searchable": false,
                    "render": function (data, type, full, meta) {
                        return null;
                    }
                },
                {
                    "targets": 1,
                    'className': '',
                    "render": function (data, type, full, meta)
                    {
                        if (full.category == 1) {
                             return "Buffalo" ;
                        } else if(full.category==2) {
                            return "Cow";
                        }
                        else if(full.category==3) {
                            return "Buffalo+Cow";
                        }
                        return "None";
                    }
                },
                {
                    "targets": 2,
                    'className': '',
                    "render": function (data, type, full, meta)
                    {
                        return full.quantity ;
                    }
                },
                {
                    "targets": 3,
                    'className': '',
                    "render": function (data, type, full, meta)
                    {
                        return full.pricePerPacket ;
                    }
                },
                {
                    "targets": 4,
                    'className': '',
                    "render": function (data, type, full, meta)
                    {
                        return full.customer.fullName;
                    }
                },
                {
                    "targets": 5,
                    'className': '',
                    "render": function (data, type, full, meta) {
                        return full.dropOff_Location;
                    }
                },
                {
                    "targets": 6,
                    'className': '',
                    "render": function (data, type, full, meta) {
                        return full.pickup_Location;
                    }
                },
                {
                    "targets": 7,
                    'className': '',
                    "render": function (data, type, full, meta) {
                        return full.total_Distance;
                    }
                },
                {
                    "targets": 8,
                    'className': '',
                    "render": function (data, type, full, meta) {
                        return full.pricePerPacket * full.quantity;
                    }
                },
                 {
                    "targets": 9,
                    'className': '',
                    "render": function (data, type, full, meta) {
                        return new Date(full.fromDate).toLocaleString();
                    }
                },
                 {
                    "targets": 10,
                    'className': '',
                    "render": function (data, type, full, meta) {
                        return new Date(full.toDate).toLocaleString();
                    }
                },
                {
                    "targets": 11,
                    'className': '',
                    "render": function (data, type, full, meta) {
                         return new Date(full.soldDate).toLocaleString();
                    }
                },
                {
                    "targets": 12,
                    'className': '',
                    'sortable': false,
                    "render": function (data, type, full, meta)
                    {
                      
                        var y='<ul class="dropdown-menu dropdown-menu-right" style="min-width:152px;padding-left:5px !important;">';
                            
                        
                        return '<ul class="icons-list"> ' +
                            '<li class="dropdown" >' +
                            '			<a href="#" class="dropdown-toggle" data-toggle="dropdown">' +
                            '				<i class="icon-menu9"></i>' +
                            '			</a>' +
                                            y +
                            '				<li>' +
                            '                   <button class="btn btn-sm bg-info icon-pencil" onclick="updateFunction(' + full.id + ')" title="Edit"></button>' +
                            '                   <button class="btn btn-sm bg-danger icon-bin mr-5" onclick="deleteFunction(' + full.id + ')" title="Delete"></button>' +
                            '               </li>' +
                            '			</ul>' +
                            '		</li >' +
                            '	</ul >';
                    }
                },
            ],
            "serverSide": "true",
            "processing": "true",
            "language":
            {
                "processing": "<i class='icon-spinner spinner icon-2x'></i>",
                "search": "<span>Search :</span> _INPUT_",
                "searchPlaceholder": "Filter Data",
                "lengthMenu": "<span>Show :</span> _MENU_",
                "paginate": { 'first': 'First', 'last': 'Last', 'next': '&rarr;', 'previous': '&larr;' }
            }
        });
    }


    function searchTable()
    {
        var name = $('#searchName').val();
        var pickup = $('#searchPickup').val();
        var dropoff = $('#searchDropoff').val();
        var distance = $('#searchDistance').val();
        var priceper = $("#pricePer").val();
        var soldDate = $("#soldDate").val().toString();
        var fromDate = $("#fromDate").val();
        var toDate = $("#toDate").val();

        
        $('#packetsTable').DataTable().clear();
        $('#packetsTable').DataTable().destroy();

        loadTable(dropoff,pickup,distance,priceper,soldDate,name,fromDate,toDate);
    }

    function clearSearch()
    {
        $('#packetsTable').DataTable().clear();
        $('#packetsTable').DataTable().destroy();

        $('#searchName').val("");
        $('#searchPickup').val("");
        $('#searchDropoff').val("");
        $('#searchDistance').val("");
        $("#pricePer").val("");
        $("#soldDate").val("");

        loadTable();
    }


    function updateFunction(id)
    {
        $('#updEmailErrMsg').text("");
        $('#updSubBtn').attr('disabled', false);

        $("#loadImg").show();

        $.ajax({
            type: 'POST',
            url: "../Ajax/GetSoldPacketById",
            dataType: "json",
            data: {
                id: id
            },
            success: function (response)
            {
                if (response == 0) {
                    alert("Record not found, Please reload the page.");
                }

                $("#updId").val(response.id);
                if (response.category == "1") {
                    $("#updCategory").val("1");
                }
                else if(response.category=="2") {
                    $("#updCategory").val("2");
                }
               else if(response.category=="3") {
                    $("#updCategory").val("3");
                }
                else
                {
                    $("#updCategory").val("");
                }
                
                $("#updQuantity").val(response.quantity);
                $("#updPrice").val(response.pricePerPacket);
                $("#updDate").val(response.soldDateString);
                $("#upddropOff").val(response.dropOff_Location);
                $("#updPickup").val(response.pickup_Location);
                $("#updDistance").val(response.total_Distance);
                $("#updFromDate").val(response.fromDate.toString("yyyy-MM-ddThh:mm"));
                $("#updToDate").val(response.toDate.toString("yyyy-MM-ddThh:mm"));
                
               
             

                $("#loadImg").hide();
                $("#updateModal").modal('show');
            },
            error: function ()
            {
                $("#loadImg").hide();

                alert("ajax Failed");
            }
        });

    }

    function deleteFunction(id) {
        $('#confirmModalHeading').text('Warning!');
        $('#confirmModalHeader').removeClass('bg-success');
        $('#confirmModalHeader').addClass('bg-danger');
        $('#confirmModalText').empty();
        $('#confirmModalText').append('Are you sure you want to delete this record?');

        $("#confirmModalForm").attr("action", "../Admin/DeleteSoldPackets?id=" + id + "&way=@ViewBag.Way");

        $('#confirmModal').modal('show');
    }


</script>

